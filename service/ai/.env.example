# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# Model Configuration
MODEL_NAME=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_BATCH_SIZE=32
EMBEDDING_REQUEST_TIMEOUT=120
EMBEDDING_MAX_RETRIES=6
TEMPERATURE=0.7

# Vector Store Configuration
VECTOR_STORE_PATH=./vector_store
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
CODE_CHUNK_SIZE=1400
CODE_CHUNK_OVERLAP=120
ENABLE_CODE_INDEXING=true
CODE_FILE_EXTENSIONS=.h,.hpp,.hh,.hxx,.c,.cc,.cpp,.cxx,.ixx,.tpp
MAX_INDEX_FILE_SIZE_KB=512

# Galay Documentation Paths (Recommended)
# Set one repo root path; AI will scan all first-level subdirectories automatically.
GALAY_DOCS_ROOT_PATH=/path/to/repos

# Optional (Docker): container-side docs root path
# GALAY_DOCS_CONTAINER_ROOT_PATH=/docs/repos

# Optional paths file (one path per line, supports # comments)
# GALAY_DOCS_PATHS_FILE=./docs_paths.txt

# Optional single extra path
# GALAY_DOCS_PATH=/path/to/another-repo

# Legacy per-repo paths (optional, backward compatible)
# GALAY_KERNEL_DOCS_PATH=/path/to/galay-kernel
# GALAY_SSL_DOCS_PATH=/path/to/galay-ssl
# GALAY_HTTP_DOCS_PATH=/path/to/galay-http
# GALAY_RPC_DOCS_PATH=/path/to/galay-rpc
# GALAY_REDIS_DOCS_PATH=/path/to/galay-redis
# GALAY_MYSQL_DOCS_PATH=/path/to/galay-mysql
# GALAY_MONGO_DOCS_PATH=/path/to/galay-mongo
# GALAY_ETCD_DOCS_PATH=/path/to/galay-etcd
# GALAY_UTILS_DOCS_PATH=/path/to/galay-utils
# GALAY_MCP_DOCS_PATH=/path/to/galay-mcp

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
ENVIRONMENT=development
LOG_LEVEL=INFO
